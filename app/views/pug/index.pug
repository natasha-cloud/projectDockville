  .d-flex.flex-row.flex-lg-column.justify-content-center.align-items-center.h-100.mt-3.mt-lg-0
    a.btn.btn-dark.m-3(href='https://twitter.com/i/flow/login?redirect_after_login=%2Flogin%3Flang%3Den')
      i.fab.fa-twitter
    a.btn.btn-dark.m-3(href='https://www.facebook.com/login/')
      i.fab.fa-facebook-f
    a.btn.btn-dark.m-3(href='https://www.instagram.com/accounts/login/')
      i.fab.fa-instagram
